<!--index.wxml-->
<view style="position:fixed;left:0;top:0;width: 100%;z-index: 10;">
    <view class="header bg">
        <view class="header-wechat">
            <image class="header-wechat" src="/image/index/code.png"></image>
        </view>
        <view class="search">
            <view class="search-icon">
                <icon type="search" size="16"/>
            </view>
            <input class="search-input" confirm-type="search" value="{{inputVal}}" placeholder="达芙荻丽面膜" bindconfirm="handleSearch" bindinput="handleSearchValue"/>
        </view>
        <view class="header-wechat">
            <image class="header-wechat" src="/image/index/message.png"></image>
        </view>
    </view>
</view>
	
<!--轮播图开始-->
<block wx:if="{{inputVal == ''}}">
<view class="container">
        <view class="">
            <view class="swiper">
        	    <swiper indicator-color="#e0e1e3" indicator-active-color="#babbbf" indicator-dots="true" autoplay="true" interval="{{interval}}" duration="{{duration}}" circular="true">
                <block wx:for="{{imgUrls}}" wx:key="{{index}}">
                    <swiper-item>
                        <image src="{{item.pic_path}}" class="slide-image" bindtap="handleBanner" data-id="{{item.goods_str}}" data-name="{{item.ban_name}}"/>
                    </swiper-item>
                </block>
                </swiper>
            </view>
            <!-- ***************************品牌分类************************** -->              
            <view class="extend bg box">
                <view class="extend-list">
                    <view class="list-content"  wx:for="{{extendList}}" wx:key="index"  data-index="{{index}}">
                        <navigator open-type="navigate" url="/pages/seemore/seemore?newbrandid={{item.cat_id}}&&name={{item.cat_name}}">
                            <image src="{{item.pic_path}}" class="list-image"/>
                        </navigator>
                        <view style="font-size: 20rpx;text-align: center;margin-top: 5rpx;">{{item.cat_name}}</view>
                    </view>
                    <view class="list-content">
                        <navigator open-type="switchTab" url="/pages/classify/index">
                            <view style="font-size: 20rpx;text-align: center;margin-top: 5rpx;line-height: 150rpx;color: #666">查看更多></view>
                        </navigator>
                    </view>
                </view>
            </view> 
            <!--  ***************************特殊商品*********************** -->
            <view class="goods bg box">
                <view class="text">
                    倾情推荐
                </view>
                <view class="line"></view>
                        <view class="goods-list"  wx:for="{{dbGoods}}" wx:key="{{index}}"  data-index="{{index}}">  
                        <navigator url="/pages/detail/detail?id={{item.id}}&special=true">
                            <image src="{{item.goods_img}}" class="see-image" mode="scaleToFill"/>
                        </navigator>
                        <view class="goods-title">{{item.name}}</view>
                        <view class="goods-price">
                            <view class="new-price left">￥{{item.shopprice}}</view>
                            <image src="/image/cart.png" class="add-shopcart right"  data-id="{{item.id}}" data-name="{{item.name}}" data-price="{{item.shopprice}}" data-lv="{{item.special_rank}}" bindtap="handleAddDbGoods"/>
                        </view> 
                </view>

            </view>
            <!--  ***************************专题功能*********************** -->
            <view class="set bg" wx:for="{{IndexSetList}}" wx:key="{{index}}">
                <!--  ***************************专题功能1*********************** -->
                <view wx:if="{{item.class_name == 'box1'}}" class="set-one">
                    <image src="{{item.img_url[0]}}" class="set-img" data-id="{{item.goods_str[0].goods_str}}" data-name="{{item.title}}" bindtap="handleGoToPic"/>
                </view>
                <!--  ***************************专题功能2*********************** -->
                <view wx:if="{{item.class_name == 'box2'}}" class="set-two">
                    <view class="two-img">
                        <image src="{{item.img_url[0]}}" class="set-img" data-id="{{item.goods_str[0].goods_str}}" data-name="{{item.title}}" bindtap="handleGoToPic"/>
                    </view>
                    <view class="two-img">
                        <image src="{{item.img_url[1]}}" class="set-img" data-id="{{item.goods_str[1].goods_str}}" data-name="{{item.title}}" bindtap="handleGoToPic"/>
                    </view>
                </view>
                <!--  ***************************专题功能3*********************** -->
                <view wx:if="{{item.class_name == 'box3'}}" class="set-three">
                    <view class="three-img">
                        <image src="{{item.img_url[0]}}" class="set-img" data-id="{{item.goods_str[0].goods_str}}" data-name="{{item.title}}" bindtap="handleGoToPic"/>
                    </view>
                    <view class="three-img">
                        <image src="{{item.img_url[1]}}" class="set-img" data-id="{{item.goods_str[1].goods_str}}" data-name="{{item.title}}" bindtap="handleGoToPic"/>
                    </view>
                    <view class="three-img">
                        <image src="{{item.img_url[2]}}" class="set-img" data-id="{{item.goods_str[2].goods_str}}" data-name="{{item.title}}" bindtap="handleGoToPic"/>
                    </view>
                </view>
                <!--  ***************************专题功能4*********************** -->   
                <view wx:if="{{item.class_name == 'box4'}}" class="set-four">
                    <view class="four-img">
                        <image src="{{item.img_url[0]}}" class="set-img" data-id="{{item.goods_str[0].goods_str}}" data-name="{{item.title}}" bindtap="handleGoToPic"/>
                    </view>
                    <view class="four-img">
                        <image src="{{item.img_url[1]}}" class="set-img" data-id="{{item.goods_str[1].goods_str}}" data-name="{{item.title}}" bindtap="handleGoToPic"/>
                    </view>
                    <view class="four-img">
                        <image src="{{item.img_url[2]}}" class="set-img" data-id="{{item.goods_str[2].goods_str}}" data-name="{{item.title}}" bindtap="handleGoToPic"/>
                    </view>
                    <view class="four-img">
                        <image src="{{item.img_url[3]}}" class="set-img" data-id="{{item.goods_str[3].goods_str}}" data-name="{{item.title}}" bindtap="handleGoToPic"/>
                    </view>
                </view>
                <!--  ***************************专题功能5*********************** -->
                <view wx:if="{{item.class_name == 'box5'}}" class="set-five">
                    <view class="five-img">
                        <image src="{{item.img_url[0]}}" class="set-img" data-id="{{item.goods_str[0].goods_str}}" data-name="{{item.title}}" bindtap="handleGoToPic"/>
                    </view>
                    <view class="five-img">
                        <view class="five-right">
                            <image src="{{item.img_url[1]}}" class="set-img" data-id="{{item.goods_str[1].goods_str}}" data-name="{{item.title}}" bindtap="handleGoToPic"/>
                        </view>
                        <view class="five-right">
                            <image src="{{item.img_url[2]}}" class="set-img" data-id="{{item.goods_str[1].goods_str}}" data-name="{{item.title}}" bindtap="handleGoToPic"/>
                        </view>     
                    </view>
                </view>
                <!--  ***************************专题功能6*********************** -->
                <view wx:if="{{item.class_name == 'box6'}}" class="set-six" >
                    <view class="six-img">
                        <image src="{{item.img_url[0]}}" class="set-img" data-id="{{item.goods_str[0].goods_str}}" data-name="{{item.title}}" bindtap="handleGoToPic"/>
                    </view>
                    <view class="six-img">
                        <image src="{{item.img_url[1]}}" class="set-img" data-id="{{item.goods_str[1].goods_str}}" data-name="{{item.title}}" bindtap="handleGoToPic"/>
                    </view>
                    <view class="six-img">
                        <image src="{{item.img_url[2]}}" class="set-img" data-id="{{item.goods_str[2].goods_str}}" data-name="{{item.title}}" bindtap="handleGoToPic"/>
                    </view>
                    <view class="six-img">
                        <image src="{{item.img_url[3]}}" class="set-img" data-id="{{item.goods_str[3].goods_str}}" data-name="{{item.title}}" bindtap="handleGoToPic"/>
                    </view>
                </view>
                <!--  ***************************专题功能7*********************** -->
                <view wx:if="{{item.class_name == 'box7'}}" class="set-one" style="height: 30rpx">
                    <image src="{{item.img_url[0]}}" class="set-img" data-id="{{item.goods_str[0].goods_str}}" data-name="{{item.title}}" bindtap="handleGoToPic"/>
                </view>     
            </view>
            <!--  ***************************性价比商品彩妆*********************** -->
            <view class="like bg box">
                <view class="text">
                    {{goodsList[0].title}}
                </view>
                <view class="line"></view>
                <view class="like-list">
                    <view class="like-goods bg"  wx:for="{{goodsList[0].goods}}" wx:key="index"  data-index="{{index}}">
                        <navigator url="/pages/detail/detail?id={{item.id}}">
                            <image src="{{item.goods_img}}" class="like-image"/>
                        </navigator>
                        <view class="like-price">
                            <view class="like-title">{{item.name}}</view>
                            <view style="display: flex;justify-content: space-between;">
                                <view style="width: 50%;">
                                    <view style="display: flex;">
                                        <view class="new-price letf" style="color:#ec1358;margin-top:10rpx">￥{{item.shopprice}}</view>   
                                        <view class="old-price letf" style="margin-top:14rpx">￥{{item.market_price}}</view>
                                    </view>
                                    <block wx:if="{{dbShow}}">
                                        <view class="new-price" style="color:#ec1358;margin-top:10rpx">赚{{item.makeMoney}}</view>
                                    </block>
                                </view>
                                <view style="width: 50%;">
                                <image src="/image/cart.png" data-it="{{item.inventory}}" class="add-goods right" style="margin:0" data-id="{{item.id}}" data-name="{{item.name}}" data-price="{{item.shopprice}}" bindtap="handleAddCart"/>
                                <block wx:if="{{dbShow}}">
                                    <image src="/image/add{{item.distribution_goods =='0'?0:1}}.png" class="add-goods right" style="margin:0" data-id="{{item.id}}" data-index="{{index}}" data-num="0" data-db="{{item.distribution_goods}}" bindtap="handleDistribution"/>
                                </block>
                                </view>
                             
                            </view>
                        </view>
                    </view>
                </view>
                <navigator url="/pages/seemore/seemore?id={{goodsList[0].id}}&&name={{goodsList[0].title}}">
                    <view class="more">
                        查看更多 >
                    </view>
                </navigator>

            </view>
            <!--  ***************************性价比商品*********************** -->
            <view class="like bg box">
                <view class="text">
                    {{goodsList[1].title}}
                </view>
                <view class="line"></view>
                <view class="like-list">
                    <view class="like-goods bg"  wx:for="{{goodsList[1].goods}}" wx:key="index"  data-index="{{index}}">
                        <navigator url="/pages/detail/detail?id={{item.id}}">
                            <image src="{{item.goods_img}}" class="like-image"/>
                        </navigator>
                        <view class="like-price">
                            <view class="like-title">{{item.name}}</view>
                            <view style="display: flex;justify-content: space-between;">
                                <view style="width: 50%;">
                                    <view style="display: flex;">
                                        <view class="new-price letf" style="color:#ec1358;margin-top:10rpx">￥{{item.shopprice}}</view>   
                                        <view class="old-price letf" style="margin-top:14rpx">￥{{item.market_price}}</view>
                                    </view>
                                <block wx:if="{{dbShow}}">
                                    <view class="new-price" style="color:#ec1358;margin-top:10rpx">赚{{item.makeMoney}}</view>
                                </block>
                                </view>
                                <view style="width: 50%;">
                                <image src="/image/cart.png" data-it="{{item.inventory}}" class="add-goods right" style="margin:0" data-id="{{item.id}}" data-name="{{item.name}}" data-price="{{item.shopprice}}" bindtap="handleAddCart"/>
                                <block wx:if="{{dbShow}}">
                                    <image src="/image/add{{item.distribution_goods =='0'?0:1}}.png" class="add-goods right" style="margin:0" data-id="{{item.id}}" data-index="{{index}}" data-num="1" data-db="{{item.distribution_goods}}" bindtap="handleDistribution"/>
                                </block>
                                </view>   
                            </view>
                        </view>
                    </view>
                </view>
                <navigator url="/pages/seemore/seemore?id={{goodsList[2].id}}&&name={{goodsList[2].title}}">
                    <view class="more">
                        查看更多 >
                    </view>
                </navigator>
            </view>
            <!-- ***************************全部商品************************** -->   
            <view class="like bg box">
                <view class="text">
                    全部商品
                </view>
                <view class="line"></view>
                <view class="like-list">
                    <view class="like-goods bg"  wx:for="{{allGoodsList}}" wx:key="index"  data-index="{{index}}">
                        <navigator url="/pages/detail/detail?id={{item.id}}">
                            <image src="{{item.goods_img}}" class="like-image"/>
                        </navigator>
                        <view class="like-price">
                            <view class="like-title">{{item.name}}</view>
                            <view style="display: flex;justify-content: space-between;">
                                <view style="width: 50%;">
                                    <view style="display: flex;">
                                        <view class="new-price letf" style="color:#ec1358;margin-top:10rpx">￥{{item.shopprice}}</view>   
                                        <view class="old-price letf" style="margin-top:14rpx">￥{{item.market_price}}</view>
                                    </view>
                                <block wx:if="{{dbShow}}">
                                    <view class="new-price" style="color:#ec1358;margin-top:10rpx">赚{{item.makeMoney}}</view>
                                </block>
                                </view>
                                <view style="width: 50%;">
                                <image src="/image/cart.png" data-it="{{item.inventory}}" class="add-goods right" style="margin:0" data-id="{{item.id}}" data-name="{{item.name}}" data-price="{{item.shopprice}}" bindtap="handleAddCart"/>
                                <block wx:if="{{dbShow}}">
                                    <image src="/image/add{{item.distribution_goods =='0'?0:1}}.png" class="add-goods right" style="margin:0" data-id="{{item.id}}" data-index="{{index}}" data-db="{{item.distribution_goods}}" bindtap="handleAllGoodsDb"/>
                                </block>
                                </view>   
                            </view>
                        </view>
                    </view>
                </view>
                <button wx:if="{{isBtnShow}}" class="is-more" loading="{{isLoading}}" disabled="true">{{btnTxt}}</button>
            </view>
        </view>
</view>
</block>
<block wx:else>
        <view class="search-box">
            <view class="search-nomsg" wx:if="{{isErr == 100}}">奴家找不到呀~</view>
            <!-- 搜索内容 -->
            <view wx:else class="like-list">
                <view class="like-goods bg"  wx:for="{{searchList}}" wx:key="index"  data-index="{{index}}">
                    <navigator url="/pages/detail/detail?id={{item.id}}">
                        <image src="{{item.goods_img}}" class="like-image"/>
                    </navigator>
                        <view class="like-price">
                            <view class="like-title">{{item.name}}</view>
                            <view style="display: flex;justify-content: space-between;">
                                <view style="width: 50%;">
                                    <view style="display: flex;">
                                        <view class="new-price letf" style="color:#ec1358;margin-top:10rpx">￥{{item.shopprice}}</view>   
                                        <view class="old-price letf" style="margin-top:14rpx">￥{{item.market_price}}</view>
                                    </view>
                                <block wx:if="{{dbShow}}">
                                    <view class="new-price" style="color:#ec1358;margin-top:10rpx">赚{{item.makeMoney}}</view>
                                </block>
                                </view>
                                <view style="width: 50%;">
                                <image src="/image/cart.png" data-it="{{item.inventory}}" class="add-goods right" style="margin:0" data-id="{{item.id}}" data-name="{{item.name}}" data-price="{{item.shopprice}}" bindtap="handleAddCart"/>
                                <block wx:if="{{dbShow}}">
                                    <image src="/image/add{{item.distribution_goods =='0'?0:1}}.png" class="add-goods right" style="margin:0" data-id="{{item.id}}" data-index="{{index}}" data-db="{{item.distribution_goods}}" bindtap="handleSearchDb"/>
                                </block>
                                </view>   
                            </view>
                        </view>
                </view>
            </view>
                <button wx:if="{{isErr == 0 ? true : false }}" class="is-more" loading="{{isLoading1}}" disabled="true">{{btnTxt1}}</button>
        </view>
</block>
