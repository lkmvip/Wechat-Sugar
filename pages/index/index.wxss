/**index.wxss**/
.container {
    height: 100%;
    background:#f1f1f1;
} 
.bg {
    background:#fff;
}

.box{
    margin-top:30rpx;
    padding-top:30rpx;
    width: 100%;
}

.text {
    padding-top: 30rpx;
    text-align: center;
    font-size: 40rpx;
    box-sizing: border-box;
}
.line {
    margin: 30rpx auto;
    width: 55rpx;
    height: 3rpx;
    background: #999;
}

.middle {
    vertical-align: middle;
}

.left {
    float:left;
}

.right {
    float:right;
}

.index-header {
    width: 100%;
    display: flex;
    justify-content: space-around;
    line-height: 70rpx;
    align-items: center;
}

.header-wechat{
    width: 46rpx;
    height: 46rpx;
}

.index-search{
    width: 540rpx;
    height: 50rpx;
    font-size: 28rpx;
    text-align:center;
    border-radius: 5%;
    background: #ececec;
}

.index-tab{
    width: 100%;
    box-sizing: border-box;
    font-size: 28rpx;
    display: flex;
    justify-content: space-around;
}

.tab-list{
    height: 70rpx;
    line-height: 70rpx;
    text-align: center;
    border-bottom: 3px solid #fff;
    box-sizing: border-box;
}

.index-tab .tab-list.on{
    border-color: #ed145b;
}

.index-swiper{
    width: 100%;
}

swiper{
    height: 330rpx; 
}

.slide-image{
    width: 100%;
    height: 100%;
}

.index-plan{
    width: 100%;
    margin-top: 14rpx;
    display: flex;
    justify-content: space-around;
    font-size: 28rpx;
}

.plan-list{
    height: 160rpx;
    text-align: center;
    padding-top: 30rpx;
}

.plan-image{
    display-inlne: block;
    width: 80rpx;
    height: 80rpx;
}

.index-plan .plan-list.plan-on{
    color: #f0cb85;
}

.extend-list {
    width: 100%;
    height: 376rpx;
}

.list-content {
    float: left;
    margin: 15rpx 0 0 20rpx;
    width: 160rpx;
    height: 160rpx;
    border: 1rpx solid #fff;
}

.list-image {
    width: 160rpx;
    height: 160rpx;
}

.supply-list {
    width: 100%;
    background:#f1f1f1;
}

.supply-content {
    width: 100%;
    height: 440rpx;
    display: flex;
    justify-content: space-between;
}

.supply-image {
    width: 370rpx;
    height: 440rpx;
}

.supply-hot {
    margin-top:20rpx;
    width: 100%;
    height: 380rpx;
    background: pink;
}

.supply-scroll {
    margin-top:20rpx;
    width: 100%;
}

.scroll-box {
    height: 250rpx;
}

.scroll-items {
    margin: 20rpx 0 0 20rpx;
    width: 200rpx;
    height: 200rpx;
}

.scroll-image {
    width: 200rpx;
    height: 200rpx;
}

.goods-list {
    width: 700rpx;
    margin:0 auto 30rpx auto;
    border-bottom: 1rpx solid #ededed;

}

.goods-image {
    width: 700rpx;
    height: 320rpx;
}

.goods-price {
    height: 80rpx;
    line-height: 80rpx;
}

.goods-title {
    font-size: 30rpx;
}

.new-price {
    font-size: 24rpx;
}

.old-price {
    font-size: 20rpx;
    color:#9a9a9a;
    text-decoration:line-through;
    margin:2rpx 5rpx;
}

.through {
    font-size: 24rpx;
    color:#9a9a9a;
} 

.make-money {
    font-size: 24rpx;
    color:#ed165a;
    margin:0 5rpx;   
}


.add-goods {
    width: 50rpx;
    height: 50rpx;
    margin:15rpx 10rpx 0 0;
}

.add-shopcart {
    width: 50rpx;
    height: 50rpx;
    margin:15rpx 0 0 0;
}

