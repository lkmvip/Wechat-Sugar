/**index.wxss**/
.container {
    height: 100%;
    background:#f1f1f1;
} 

.index-header {
    width: 100%;
    height: 70rpx;
    display: flex;
    justify-content: space-around;
    line-height: 70rpx;
    align-items: center;
    background:#fff;
}

.header-wechat{
    width: 46rpx;
    height: 46rpx;
}

.index-search{
    width: 540rpx;
    height: 50rpx;
    font-size: 28rpx;
    text-align:center;
    border-radius: 5%;
    background: #ececec;
}

.index-tab{
    width: 100%;
    height: 70rpx;
    box-sizing: border-box;
    font-size: 28rpx;
    display: flex;
    justify-content: space-around;
    background:#fff; 
}

.tab-list{
    height: 70rpx;
    line-height: 70rpx;
    text-align: center;
    border-bottom: 3px solid #fff;
    box-sizing: border-box;
}

.index-tab .tab-list.on{
    border-color: #ed145b;
}

.index-swiper{
    width: 100%;
    height: 330rpx;
}

swiper{
    height: 330rpx; 
}

.slide-image{
    width: 100%;
    height: 100%;
}

.index-plan{
    width: 100%;
    height: 160rpx;
    margin-top: 14rpx;
    display: flex;
    justify-content: space-around;
    font-size: 28rpx;
}

.plan-list{
    height: 160rpx;
    background: red;
    text-align: center; 
}

.plan-image{
    display-inlne: block;
    width: 100rpx;
    height: 80rpx;
}

.index-plan .plan-list.plan-on{
    color: #f0cb85;
}