@import '../index/index.wxss';
.goods-search {
	width: 100%;
	height: 80rpx;
	background: #fff;
	padding-top: 15rpx; 
}
.search-input {
	width: 700rpx;
	height: 50rpx;
	margin: 5rpx auto;
	background: #ececec;
}
.goods-tab {
	width: 100%;
	border-bottom: 1rpx solid #ebebeb;
	box-sizing: border-box;	
}
.goods-list {
	width: 660rpx;
	height: 70rpx;
	margin:30rpx auto;
	display: flex;
}
.goods-classify {
	flex:1;
	height: 70rpx;
	text-align: center;
	line-height: 70rpx;
	font-size: 30rpx;
	box-sizing: border-box;
	border: 1rpx solid #999;
}
.goods-classify:first-of-type {
	border-right: none;
}
.goods-classify:last-of-type {
	border-left: none;
}
.ontab {
	background: #ff4242;
	color:#fff;
	border: none;
}
.classify-list {
	width: 100%;
	height: 880rpx;
	display: flex;
}
.classify-list-left {
	width: 25%;
	height: 100rpx;
}
.classify-list-right {
	width: 75%;
	height: 100%;
	background: red;
}
.list-left-tab {
	width: 100%;
	height: 90rpx;
	background: #aaa;
}