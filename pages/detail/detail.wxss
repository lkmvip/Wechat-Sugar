/* pages/detail/detail.wxss */
@import '../index/index.wxss';
.detail {
	width: 100%;
}
.detail-img {
	width: 100%;
	height: 750rpx;
}
/*详情页中部*/
.detail-bg{
	width: 100%;
	background: #fff;
}
.detail-mid {
	width: 710rpx;
	margin:0 auto; 
}
.detail-tit {
	width: 100%;
	padding: 20rpx 0;
	display: flex;
	background: #fff;
}
.detail-text {
	width: 600rpx;
	font-size: 30rpx;
	border-right: 1rpx solid #ebebeb;
}
.detail-price {
	width: 300rpx;
	font-size: 30rpx;
}
.detail-like {
	width: 110rpx;
	text-align: center;
	padding-top: 35rpx; 
}
.like-img {
	width: 50rpx;
	height: 50rpx;
}
.detail-msg {
	width:710rpx;
	height: 60rpx;
	line-height: 60rpx;
	font-size: 26rpx;
	color: #666;
	display: flex;
	justify-content: space-between;
}
/*商品保障信息*/
.detail-save {
	width: 100%;
	height: 100rpx;
	background: #fdfeee;
	margin-top: 20rpx; 
}

