/* pages/detail/detail.wxss */
@import '../index/index.wxss';
@import '../cart/index.wxss';

.detail {
	width: 100%;
}
.detail-img {
	width: 100%;
	height: 750rpx;
}
/*详情页中部*/
.detail-bg{
	width: 100%;
	background: #fff;
}
.detail-mid {
	width: 710rpx;
	margin:0 auto; 
}
.detail-tit {
	width: 100%;
	padding: 20rpx 0;
	display: flex;
	background: #fff;
}
.detail-text {
	width: 600rpx;
	font-size: 30rpx;
	line-height: 60rpx;
}
.detail-price {
	width: 300rpx;
	font-size: 30rpx;
}
.detail-like {
	width: 110rpx;
	text-align: center;
	padding-top: 35rpx; 
}
.like-img {
	width: 50rpx;
	height: 45rpx;
}
.detail-msg {
	width:710rpx;
	height: 60rpx;
	line-height: 60rpx;
	font-size: 26rpx;
	color: #666;
	display: flex;
}
/*商品保障信息*/
.detail-save {
	width: 100%;
	height: 100rpx;
	background: #fdfeee;
	margin-top: 20rpx; 
	line-height: 100rpx;	
	font-size: 24rpx;
	display: flex;
	justify-content: space-around;
}
/* 商品内容开始 */
.detail-content {
	width: 100%;
	background: #fff;
	margin-top: 20rpx; 
}
.navbar{
	width: 100%;
	height: 100rpx;
	background: #fff;
	display: flex;
}
.order-item {
	width: 50%;
	font-size: 34rpx;
	line-height: 100rpx;
	text-align: center;
	box-sizing: border-box;
}
.item-on {
	color: #f3515c;
	border-bottom: 10rpx solid #f3515c; 
}
.navbar-content{
	width: 100%;
	border-top: 1rpx solid #f1f1f1; 
	padding: 0 0 100rpx 0;
}
.navbar-hot {
	width: 710rpx;
	display: flex;
	flex-wrap: wrap; 
	margin: 0 auto;
	padding: 0 0 100rpx 0;
}
.hot-list{
	width: 355rpx;
}
.hot-img{
	width: 280rpx;
	height: 280rpx;
	margin: 0 auto;
	display: block; 
	border: 1 solid #ececec;
}
.hot-price{
	width: 100%;
}
/* 详情页底部开始 */
.detail-bottom {
	width: 100%;
	height: 100rpx;
	position: fixed;
	bottom: 0;
	box-sizing: border-box;
	display: flex;
	background: #fff;
	border-top:1rpx solid #eee; 

}
.detail-left {
	width: 30%;
	display: flex;
}
.detail-right {
	width: 70%;
	display: flex;

}
.go-index,.go-cart{
	width: 50%;
	color: #333;
	font-size: 20rpx;
	text-align: center;
	height: 100rpx;
	padding-top: 10rpx;
}
.go-index {
	box-sizing: border-box;
	border-right:1rpx solid #eee;
}
.tab-img{
	width: 50rpx;
	height: 50rpx;
}
.add-cart,.go-pay{
	width: 50%;
	height: 100rpx;
	color: #fff;
	font-size: 30rpx;
	text-align: center;
	height: 100rpx;
	line-height: 100rpx;
}
.add-cart{
	background: #ffbd4f;
}
.go-pay{
	background: #ff4242;
}
/* 加入购物车的弹窗 */
.zan-dialog__mask {
	position: fixed;
	top: 0;
	left: 0;
	right: 0;
	bottom: 100rpx;
	z-index: 10;
	background: rgba(0, 0, 0, 0.7);
	display: none;
}
.zan-dialog__container {
	position: fixed;
	bottom: 100rpx;
	width: 750rpx;
	background: white;
	transform: translateY(150%);
	transition: all 0.4s ease;
	z-index: 11;
}
.zan-dialog--show .zan-dialog__container {
	transform: translateY(0);
}
.zan-dialog--show .zan-dialog__mask {
	display: block;
}
.dialog-content {
	width: 100%;
	height: 540rpx;
	border-top:1rpx solid #eee; 

}
.dialog-img {
	width: 210rpx;
	height: 210rpx;
	position: absolute;
	top: -60rpx;
	left: 30rpx;
	border-radius: 5rpx;
	display: block; 
}
.dialog-closed {
	width: 30rpx;
	height: 30rpx;
	float: right;
	margin: 20rpx 20rpx 0 0; 
}
.dialog-price {
	width: 400rpx;
	height: 150rpx;
	font-size: 40rpx;
	color: #ff4341;
	line-height: 150rpx;
	float: right;

}
.dialog-data {
	width: 100%;
	display: flex;
	border-top:1rpx solid #eee;
	margin-top:20rpx;  
}
.dialog-text {
	height: 90rpx;
	line-height: 90rpx;
	color: #666;
	font-size: 30rpx;
	margin: 0 20rpx; 
}
.all-num {
	width: 30rpx;
	height: 30rpx;
	position: absolute;
	left: 175rpx;
	background: #fe4241;
	color: #fff;
	border-radius: 50%;
	font-size: 14rpx;
	text-align: center;
	line-height: 30rpx; 
}
.guess-box{
	background: #fff;width: 100%;margin-top:20rpx;
}
.detail-guess{
	width: 100%;
	display: flex;
	flex-wrap:wrap;
	background: #fff;
	border-top: 1rpx solid #666;
	border-left: 1rpx solid #666;	
	margin-bottom:20rpx;
	box-sizing: border-box;
}
.like-content{
	width: 33.33%; 
	box-sizing: border-box;
	border-bottom: 1rpx solid #666;
	border-right: 1rpx solid #666;
	padding: 20rpx 10rpx; 	
}
.guess-content{
	width: 100%;
	box-sizing: border-box;  
}
.guess-img{
	width: 100%;
	height: 220rpx;
}
.guess-tit{
	font-size: 28rpx;
	overflow:hidden;
	text-overflow:ellipsis;
	white-space:nowrap;
}
.guess-num{
	font-size: 24rpx;
	color: #666;
}
.guess-price{
	width: 100%;
	color: #fe4241;
	font-size: 28rpx;
	display: flex;
	line-height: 40rpx;	
	justify-content: space-between;
}
.cart-img{
	width: 40rpx;
	height: 40rpx;
}