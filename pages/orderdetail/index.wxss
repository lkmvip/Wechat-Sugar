/* pages/orderdetail/index.wxss */
.shop-addr {
	width:100%;
	height:100rpx;
	color:#999;
	line-height:100rpx;
	background:#fff;
	font-size:30rpx;
}
.addr-arrow {
	width:50rpx;
	height:100rpx;
	font-size:40rpx;
	line-height:100rpx;
	color:#999;
	float:right;
}
/* 订单信息 */
.goods-msg {
	width: 100%;
	background: #fff;
	display: flex;
}
.msg-img {
	width: 160rpx;
	height: 160rpx;
	margin:20rpx; 
}
.msg-text {
	width: 530rpx;
}
.msg-tit {
	font-size: 30rpx;
}
.msg-day {
	width: 100rpx;
	font-size: 24rpx;
	color: #ff4242;
	border: 1rpx solid #ff4242;
	margin:10rpx 0; 
}
.msg-price {
	display: flex;
	justify-content: space-between;
}
/* 配送方式 */
.shop-way {
	width: 100%;
	height: 100rpx;
	line-height: 100rpx;
	border-top: 1rpx solid #ececec;
	background: #fff;
	display: flex;
	justify-content: space-between;
}
/* 优惠卷 */
.msg-ticket {
	margin:20rpx 0 0 0; 
	width: 100%;
	height: 100rpx;
	line-height: 100rpx;
	border-top: 1rpx solid #ececec;
	background: #fff;
	display: flex;
	justify-content: space-between;
}
.checkbox{
	width: 100%;
	font-size: 30rpx;
	margin-left: 20rpx; 
}
.check {
	width: 10rpx;
	height: 10rpx;
	color: #000;
}
/* 提交订单 */
.msg-submit {
	border-top: 1rpx solid #ececec;
	width: 100%;
	height: 100rpx;
	background: #fff;
	position: fixed;
	bottom: 0;
}
.msg-gopay {
	width: 500rpx;
	float: right;
	height: 100rpx;
	line-height: 100rpx;
	font-size: 28rpx;
	display: flex;
}
.gopay-price{
	width: 300rpx;
	text-indent: 30rpx; 
}
.go-submit{
	width: 200rpx;
	text-align: center;
	background: #ff4242;
	color: #fff;
}