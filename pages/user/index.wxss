@import '../index/index.wxss';
.userinfo {
	width: 100%;
	background: red;
}
.userinfo-avatar {
	width: 128rpx;
	height: 128rpx;
	border-radius: 50%;
	float: left;
	margin:30rpx 0 0 30rpx; 
}

.userinfo-nickname {
	padding: 0rpx 0rpx 100rpx 50rpx;
	color: #fff;
	font-size: 34rpx;
	float: left;
	margin-top: 30rpx;
}
.userbg {
	width: 100%;
	height: 200rpx;
}
.user-wallet {
	width: 100%;
	height: 100rpx;
	line-height: 100rpx;
	background: #fff; 
	display: flex;
	justify-content: space-between;
	font-size: 26rpx;
	border-bottom: 1rpx solid #eaeaea;
} 
.balance {
	margin-left: 20rpx;
}
.withdraw{
	margin-right: 20rpx;
}
.wallet-icon {
	font-size: 34rpx;
	color: #a4a4a4;
}
.income {
	width: 100%;
	padding: 30rpx 0 0 0 ;
	display: flex;
	background: #fff;
}
.income-will,.income-total{
	width: 50%;
	height: 100rpx;
}
.will-icon,.total-icon {
	width: 60rpx;
	height: 60rpx;
	float: left;
	margin: 10rpx 0 0 30rpx;	

}
.will-content,.total-content{
	font-size: 24rpx;
	color: #999;
	float: left;
	margin-left: 30rpx;
}