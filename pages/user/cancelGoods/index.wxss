/* pages/user/cancelGoods/index.wxss */
@import '../order/order.wxss';
.cancel-box{
	width: 100%;
	margin-top: 20rpx;
}
.cancel-requset{
	width: 100%;
	background: #fff;
	display: flex;
	font-size: 28rpx;
	line-height: 56rpx;
	justify-content: space-between;
	border-bottom: 1rpx solid #e5e5e5;
	padding:20rpx 0; 
}
.requset-img{
	width: 160rpx;
	height: 160rpx;
	margin:20rpx; 
}
.requset-text{
	text-align: right;
	margin-right: 20rpx;
}
.count{
	width: 150rpx;
	height: 50rpx;
	display: flex;
	border:1rpx solid #e5e5e5;
}
.count-down,.count-add,.count-num{
	font-size: 28rpx;
	flex: 1;
    height: 50rpx;
    line-height: 50rpx;
    text-align: center;
}
.count-num {
	border-left: 1rpx solid #a5a5a5;
	border-right: 1rpx solid #a5a5a5; 
}
.cancel-textarea{
	height: 100rpx;
}
.pic-box{
	width: 160rpx;
	height: 160rpx;
	display: flex;
	flex-wrap: wrap;
	text-align: center;
	border: 1rpx dashed #a5a5a5;
}
.requset-pic{
	width: 80rpx;
	height: 80rpx;
	margin:0 auto; 
}
.pic-text{
	width: 100%;
}
.request-btn{
	width: 100%;
	height: 60rpx;
	background: #ff4242;
	text-align:center;
	color: #fff;
	line-height: 60rpx;
	position: fixed;
	left: 0;
	bottom: 0;
}