/* pages/user/logistics/index.wxss */
.logistics-top{
	width: 100%;
	padding-top: 20rpx;
	margin-bottom: 20rpx;
	background: #fff;
	display: flex;
	font-size: 28rpx;
	line-height: 60rpx;
	box-sizing:border-box; 
}
.top-img{
	width: 140rpx;
	height: 140rpx;
	margin: 20rpx; 
}
.logistics-bottom{
	width: 100%;
	height: 100%;
	padding:20rpx;
	background: #fff;
	font-size: 28rpx;
	box-sizing:border-box;
}
.bottom-line{
	width: 5%;
	border-right: 1rpx solid #cdcdcd;
}
.bottom-msg{
	width: 100%;
	display: flex;
	/* box-sizing: border-box;  */

}
.bottom-text{
	width: 94%;
	margin-left: 10rpx;
	line-height: 56rpx;
	border-bottom: 1rpx solid #cdcdcd;
	/* box-sizing: border-box;  */
}
.bottom-tab {
	display: inline-block;
	width: 20rpx;
	height: 20rpx;
	border-radius: 50%;
	background:#cdcdcd;
	margin-left: -20rpx;
}
.bottom-time{
	width: 100%;
	line-height: 80rpx;
}
.on1{
	color: #f2505d;
}
.on2{
	background: #f2505d;
}