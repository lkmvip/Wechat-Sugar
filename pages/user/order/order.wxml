<!--pages/user/order.wxml-->
<view class="order">
    <view class="navbar">
        <block wx:for-items="{{tabs}}" wx:key="{{index}}">
            <view id="{{index}}" class="order-item {{activeIndex == index ? 'item-on' : ''}}" bindtap="tabClick">
                <view class="weui-navbar__title">{{item}}</view>
            </view>
        </block>
    </view>
    <view class="order-content">
    	<!-- 全部订单内容 -->
        <view class="order-all" hidden="{{activeIndex != 0}}">
        	<view class="all-list" wx:for="{{allOrder}}">
				<view class="alllist-top">
					<view class="mleft">订单编号:{{item.orderNum}}</view>
					<view class="mright" style='color: #f3515c;'>{{item.Status}}</view>
				</view>
				<view class="alllist-mid">
					<image class="mid-img mleft" src="{{item.orderUrl}}" background-size="cover"></image>
					<view class="mid-content">
						<view class="mleft">{{item.orderName}}</view>
						<view class="mleft">
							<view class="">￥{{item.orderPirce}}</view>
							<view class="fright" style='color: #ececec;'>X{{item.orderSpec}}</view>
						</view>
					</view>
				</view>
        	</view>
        </view>
        <view class="" hidden="{{activeIndex != 1}}">选项二的内容</view>
        <view class="" hidden="{{activeIndex != 2}}">选项三的内容</view>
        <view class="" hidden="{{activeIndex != 3}}">选项四的内容</view>
    </view>
</view>
