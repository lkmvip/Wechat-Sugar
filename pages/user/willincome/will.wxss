.list-top {
	width: 100%;
	height: 100rpx;
	line-height: 100rpx;
	display: flex;
	justify-content: space-between;
	font-size: 30rpx;
}
.list-mid {
	width: 100%;
	padding-top:20rpx;
	display: flex;
}
.mid-img {
	width: 180rpx;
	height: 180rpx;
}
