	width: 520rpx;
	height: 200rpx;
	margin-left: 10rpx;
}
.content-top,.content-mid,.content-bottom {
	width: 100%;
	height: 50rpx;
	overflow: hidden;
	text-overflow:ellipsis;
	white-space: nowrap;
	font-size: 30rpx; 
	line-height: 50rpx;
}
.content-mid,.content-bottom {
	display: flex;
	justify-content: space-between;
}
.content-bottom {
	color: #9a9a9a;
}
/*列表底部*/
